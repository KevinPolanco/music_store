<script>
  
  const writeData = (data, container, bootstrapClass) => {
    container.innerHTML = ''
    data.forEach((data) => {
      container.innerHTML += `
        <div class="col">
          <div class="${bootstrapClass}">
            <img src="${data.cover}" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title">${data.name}</h5>
              <p class="card-text">${data.artist}</p>
            </div>
          </div>
        </div>
      `
    })
  } 

  if(!localStorage.getItem('token')){
    window.location.href= "/login"
  }
  document.addEventListener("DOMContentLoaded", async() => {
    try {
      const res = await fetch('/api/v1/discs', {
        headers: {
          Authorization: `Bearer ${localStorage.getItem('token')}`
        }
      })
      const data = await res.json()

      let labelBlue = data.discs.filter(item => item.label === "Blue Note")
      labelBlue = labelBlue.slice(labelBlue.length-8)
      
      let labelColumbia = data.discs.filter(item => item.label === "Columbia")
      labelColumbia = labelColumbia.slice(labelColumbia.length-8)
      
      let labelImpulse = data.discs.filter(item => item.label === "Impulse!")
      labelImpulse = labelImpulse.slice(labelImpulse.length-8)

      writeData(labelBlue, app1, "card")
      writeData(labelImpulse, app2, "card bg-black text-white")
      writeData(labelColumbia, app3, "card")
      
    } catch (error){
      console.log(error)
    }
  })
  
</script>

